<%
    var title;
    var postList = [];
    if (page.category) {
        site.categories.forEach(function(item) {
            if(item.name === page.category) {
                postList = item.posts.slice();
            }
        });
        title = page.category;
    }
    else if (page.tag) {
        site.tags.forEach(function(item) {
            if(item.name === page.tag) {
                postList = item.posts;
            }
        });
        title = page.tag;
    } else {
        postList = site.posts;
    }
%>

<section class="main clearfix">
    <section class="wrapper">
        <div class="content archives">
            <% if(title) { %>
                <div class="archive-title"><%- title %></div>
            <% } %>
            <ul class="archive-list">
                <% postList.each(function(item){ %>
                    <%- partial('_partial/article-archive', {item: item}) %>
                <% }); %>
            </ul>
        </div><!-- end content -->
    </section>
</section><!-- end main -->


