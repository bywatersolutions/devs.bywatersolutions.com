<section class="container">
	<h2>
		<%= page.title %>
	</h2>
	<p class="short-description"><%= page.short_description %></p>

    <% if ( page.bug ) { %>
        <a href="https://bugs.koha-community.org/bugzilla3/show_bug.cgi?id=<%= page.bug %>">
            Koha Community Bug #<%= page.bug %>
        </a>
    <% } %>

    <div class="w3-progress-container w3-round">
      <div class="w3-progressbar w3-round w3-blue" style="width:<%= ( page.raised / page.goal ) * 1000 %>%"></div>
    </div>
	<div class="funding-pledged">
		$<%= page.goal %>
	</div>
	<div class="funding-goal">
		pledged of $<%= page.goal %> goal
	</div>
	<div class="funding-backers-count">
		<%=page.supporters %>
	</div>
    <div class="funding-backers-text">
        backers
    </div>

	<article class="article">
		<%- page.content %>
	</article>

    <h2>Pledge</h2>
    <form action="https://formspree.io/developments@bywatersolutions.com" method="POST">
        <input type="hidden" name="project" value="<%= page.title %>"/>

        <p/>
        <label for="library">Library Name (required)</label>
        <input type="text" name="library"/>

        <p/>
        <label for="name">Your name (required)</label>
        <input type="text" name="name"/>

        <p/>
        <label for="email">Email address (required)</label>
        <input type="text" name="email"/>

        <p/>
        <label for="pledge_amount">Pledge amount</label>
        <input type="text" name="pledge_amount"/>

        <p/>
        <input type="submit" value="Send">
    </form>
        
